{
  "connection": {
    "mode": "standard", 
    "type": "distributed", 
    "host": "prod-db.example.com",
    "hosts": [
      "node1.example.com",
      "node2.example.com",
      "node3.example.com"
    ],
    "port": 5432,
    "database": "devops_production",
    "username": "prod_admin",
    "ssl_mode": "require",
    "pool_size": 20,
    "timeout": 30,
    "connection_pooling": "pgbouncer",
    "read_replicas": 2
  },

  "backup": {
    "enabled": true,
    "strategy": "incremental",
    "schedule": "0 2 * * *",
    "retention_days": 30,
    "location": "/backups/database",
    "encryption": false,
    "geo_redundancy": false
  },

  "replication": {
    "enabled": true,
    "replicas": 2,
    "sync_mode": "synchronous",
    "multi_region": false,
    "regions": []
  },

  "ai_optimization": {
    "query_optimization": false,
    "index_suggestions": false,
    "auto_vacuum_ml": false
  },

  "monitoring": {
    "slow_query_threshold": 200,
    "alert_on_anomaly": false,
    "metrics_export": "none"
  },

  "development": {
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "devops_development",
      "username": "dev_user",
      "password": "dev_password",
      "ssl_mode": "disable",
      "pool_size": 5,
      "timeout": 10
    },
    "backup": {
      "enabled": false,
      "schedule": "manual",
      "retention_days": 7,
      "location": "/tmp/backups"
    },
    "replication": {
      "enabled": false,
      "replicas": 0,
      "sync_mode": "asynchronous"
    },
    "seed_data": true,
    "reset_on_restart": true,
    "debug_queries": true
  }
}
